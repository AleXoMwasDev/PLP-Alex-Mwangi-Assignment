# Calculator & String Operations with Menu üßÆüìù
# Includes Error Handling ‚úÖ

def calculator():
    print("\n--- Arithmetic Calculator ---")
    try:
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))
        operation = input("Enter operation (+, -, *, /): ")

        if operation == "+":
            result = num1 + num2
            print(f"{num1} + {num2} = {result}")
        elif operation == "-":
            result = num1 - num2
            print(f"{num1} - {num2} = {result}")
        elif operation == "*":
            result = num1 * num2
            print(f"{num1} * {num2} = {result}")
        elif operation == "/":
            if num2 != 0:
                result = num1 / num2
                print(f"{num1} / {num2} = {result}")
            else:
                print("Error: Division by zero is not allowed!")
        else:
            print("Invalid operation. Please enter +, -, * or /.")

    except ValueError:
        print("Error: Please enter valid numbers.")


def string_operations():
    print("\n--- String Operations ---")
    str1 = input("Enter the first string: ")
    str2 = input("Enter the second string: ")

    concat = str1 + " " + str2
    print(f"Concatenated string: {concat}")
    print(f"Length of first string: {len(str1)}")
    print(f"Length of second string: {len(str2)}")
    print(f"Uppercase first string: {str1.upper()}")
    print(f"Lowercase second string: {str2.lower()}")


# --- Menu System ---
while True:
    print("\n=== Main Menu ===")
    print("1. Arithmetic Calculator")
    print("2. String Operations")
    print("3. Exit")

    choice = input("Choose an option (1/2/3): ")

    if choice == "1":
        calculator()
    elif choice == "2":
        string_operations()
    elif choice == "3":
        print("Goodbye! üëã")
        break
    else:
        print("Invalid choice. Please enter 1, 2, or 3.")

